{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/shared/domain/*": ["packages/shared-domain/"],
      "@/shared/application/*": ["packages/shared-application/"],
      "@webtiers-ddd-poc/shared-application": [
        "packages/shared-application/src/index.ts"
      ],
      "@webtiers-ddd-poc/shared-domain": ["packages/shared-domain/src/index.ts"]
    }
  }
}
